{
  "openapi": "3.1.0",
  "info": {
    "title": "Astrolabe API",
    "version": "0.2.0-beta.1",
    "description": "OpenAI-compatible proxy with policy-based model routing, safety-gate checks, and optional inbound auth."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local"
    },
    {
      "url": "https://your-app-name.up.railway.app",
      "description": "Railway"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "operationId": "getHealth",
        "summary": "Health check",
        "description": "Returns service health and active routing profile metadata.",
        "responses": {
          "200": {
            "description": "Healthy service response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/chat/completions": {
      "post": {
        "operationId": "createChatCompletion",
        "summary": "Create chat completion",
        "description": "Accepts OpenAI-compatible chat requests, applies safety gating and policy routing, then forwards to OpenRouter.",
        "security": [
          {
            "bearerAuth": []
          },
          {}
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatCompletionRequest"
              },
              "examples": {
                "basic": {
                  "value": {
                    "model": "ignored-by-astrolabe",
                    "messages": [
                      {
                        "role": "user",
                        "content": "Say hello in one line."
                      }
                    ]
                  }
                },
                "strictHighStakesConfirmation": {
                  "value": {
                    "stream": false,
                    "messages": [
                      {
                        "role": "user",
                        "content": "Please transfer funds to account ending 4321."
                      }
                    ],
                    "metadata": {
                      "astrolabe_confirmed": "confirm"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response (JSON or stream)",
            "headers": {
              "x-astrolabe-category": {
                "description": "Resolved routing category.",
                "schema": {
                  "type": "string"
                }
              },
              "x-astrolabe-complexity": {
                "description": "Classifier complexity before routing-profile adjustment.",
                "schema": {
                  "type": "string"
                }
              },
              "x-astrolabe-adjusted-complexity": {
                "description": "Complexity after routing profile adjustment.",
                "schema": {
                  "type": "string"
                }
              },
              "x-astrolabe-initial-model": {
                "description": "Initial routed upstream model id.",
                "schema": {
                  "type": "string"
                }
              },
              "x-astrolabe-final-model": {
                "description": "Final model id used after any escalation/fallback.",
                "schema": {
                  "type": "string"
                }
              },
              "x-astrolabe-route-label": {
                "description": "Route label from policy (for example DEFAULT, STANDARD, ESCALATE).",
                "schema": {
                  "type": "string"
                }
              },
              "x-astrolabe-escalated": {
                "description": "Whether a non-stream request escalated to a stronger model.",
                "schema": {
                  "type": "string",
                  "enum": [
                    "true",
                    "false"
                  ]
                }
              },
              "x-astrolabe-confidence-score": {
                "description": "Self-check score (1-5) when available.",
                "schema": {
                  "type": "string"
                }
              },
              "x-astrolabe-low-confidence": {
                "description": "Whether final response confidence is considered low.",
                "schema": {
                  "type": "string",
                  "enum": [
                    "true",
                    "false"
                  ]
                }
              },
              "x-astrolabe-safety-gate": {
                "description": "Whether the high-stakes safety gate was triggered.",
                "schema": {
                  "type": "string",
                  "enum": [
                    "true",
                    "false"
                  ]
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ChatCompletionResponse"
                }
              },
              "text/event-stream": {
                "schema": {
                  "type": "string"
                },
                "example": "data: {\"id\":\"chatcmpl-123\",\"choices\":[...]}\n\n"
              }
            }
          },
          "400": {
            "description": "Invalid request payload",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Missing or invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "409": {
            "description": "High-stakes confirmation required in strict mode",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "502": {
            "description": "Upstream provider/network error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "API Key"
      }
    },
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "required": [
          "ok",
          "service",
          "version",
          "routing_profile",
          "cost_efficiency_mode",
          "allow_direct_premium_models",
          "safety_gate"
        ],
        "properties": {
          "ok": {
            "type": "boolean"
          },
          "service": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "routing_profile": {
            "type": "string",
            "enum": [
              "budget",
              "balanced",
              "quality"
            ],
            "description": "Active normalized routing profile."
          },
          "cost_efficiency_mode": {
            "type": "string",
            "enum": [
              "strict",
              "balanced",
              "off"
            ],
            "description": "Active normalized cost-efficiency guardrail mode."
          },
          "allow_direct_premium_models": {
            "type": "boolean",
            "description": "Whether direct non-high-stakes premium model routes are allowed."
          },
          "safety_gate": {
            "type": "boolean",
            "description": "Whether high-stakes safety detection is enabled."
          }
        },
        "additionalProperties": true
      },
      "ChatCompletionRequest": {
        "type": "object",
        "required": [
          "messages"
        ],
        "properties": {
          "model": {
            "type": "string",
            "description": "Accepted for compatibility. Astrolabe chooses final upstream model unless ASTROLABE_FORCE_MODEL is set."
          },
          "messages": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/components/schemas/ChatMessage"
            }
          },
          "stream": {
            "type": "boolean",
            "default": true,
            "description": "If false, Astrolabe returns full JSON and runs self-check/escalation policy."
          },
          "metadata": {
            "type": "object",
            "description": "Optional metadata passthrough. In strict high-stakes mode, `metadata.astrolabe_confirmed` may be required.",
            "additionalProperties": true
          },
          "astrolabe_confirmed": {
            "type": "string",
            "description": "Optional strict-mode high-stakes confirmation token."
          }
        },
        "additionalProperties": true
      },
      "ChatMessage": {
        "type": "object",
        "required": [
          "role",
          "content"
        ],
        "properties": {
          "role": {
            "type": "string",
            "enum": [
              "system",
              "user",
              "assistant",
              "tool"
            ]
          },
          "content": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "array",
                "items": {
                  "type": "object"
                }
              }
            ]
          }
        },
        "additionalProperties": true
      },
      "ChatCompletionResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "object": {
            "type": "string"
          },
          "created": {
            "type": "integer"
          },
          "choices": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "usage": {
            "type": "object"
          }
        },
        "additionalProperties": true
      },
      "ErrorResponse": {
        "type": "object",
        "required": [
          "error"
        ],
        "properties": {
          "error": {
            "type": "object",
            "required": [
              "message"
            ],
            "properties": {
              "message": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "code": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "details": {
                "type": "object",
                "additionalProperties": true
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  }
}
