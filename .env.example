# Required
OPENROUTER_API_KEY=your_openrouter_key_here
ASTROLABE_API_KEY=set_a_long_random_secret_here

# Network
PORT=3000

# Optional OpenRouter metadata headers
# OPENROUTER_SITE_URL=https://your-site.example
# OPENROUTER_APP_NAME=Astrolabe

# Routing modes (defaults shown)
# ASTROLABE_ROUTING_PROFILE=budget                # budget | balanced | quality
# ASTROLABE_COST_EFFICIENCY_MODE=strict           # strict | balanced | off
# ASTROLABE_ALLOW_DIRECT_PREMIUM_MODELS=false     # true | false

# Safety controls (defaults shown)
# ASTROLABE_ENABLE_SAFETY_GATE=true               # true | false
# ASTROLABE_HIGH_STAKES_CONFIRM_MODE=prompt       # prompt | strict | off
# ASTROLABE_HIGH_STAKES_CONFIRM_TOKEN=confirm     # used when HIGH_STAKES_CONFIRM_MODE=strict
# ASTROLABE_ALLOW_HIGH_STAKES_BUDGET_FLOOR=false  # true | false

# Classifier and self-check models (keys from MODELS in server.js)
# ASTROLABE_CLASSIFIER_MODEL_KEY=nano
# ASTROLABE_SELF_CHECK_MODEL_KEY=nano

# Classifier context limits (clamped: messages 3-20, chars 600-12000)
# ASTROLABE_CONTEXT_MESSAGES=8
# ASTROLABE_CONTEXT_CHARS=2500

# Force every request to one model id (bypasses routing)
# ASTROLABE_FORCE_MODEL=
